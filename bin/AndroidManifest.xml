<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanotech.dchek"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sanotech.dchek.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sanotech.dchek.DashBoard" 
            >
        </activity>
        <activity android:name="com.sanotech.dchek.FoodListAndOperations" >
        </activity>
        <activity android:name="com.sanotech.dchek.DoctorInfo" 
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="com.sanotech.dchek.UserInfo" 
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="com.sanotech.dchek.BGLevel"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.sanotech.dchek.UserCustomeFoodList"
            android:parentActivityName="com.sanotech.dchek.DashBoard" >
        </activity>
        <activity android:name="com.sanotech.dchek.LogFoodConsumption"></activity>
    </application>

</manifest>